


<div class="container">
  <% if @order.errors.any? %>
    <h2>The following errors prevented the article from being saved</h2>
    <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-9">

      
      <%= form_with(model: @order, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-5">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of Customer" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Phone_Number, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :phone_number,  class: "form-control shadow rounded", placeholder: "Phone number of customer" %>
          </div>
        </div>
         
         <div class="form-group row">
          <%= f.label :Cake_Quantity, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :cake_size,  class: "form-control shadow rounded", placeholder: "Cake Quanitity" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Flavour, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :flavour,  class: "form-control shadow rounded", placeholder: "Cake Flavour" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Delivery_or_pickup, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :delivery_or_pickup,  class: "form-control shadow rounded", placeholder: "Delivery or Pickup?" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Phone_Number, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :delivery_address,  class: "form-control shadow rounded", placeholder: "Delivery Adress" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Phone_Number, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :d_phone_number,  class: "form-control shadow rounded", placeholder: "Phone number of receiver" %>
          </div>
        </div>


        <div class="form-group row">
          <%= f.label :Total_Cost, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :amount,  class: "form-control shadow rounded", placeholder: "Total Cost" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :paid, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :paid,  class: "form-control shadow rounded", placeholder: "Amount Paid" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :balance, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :balance,  class: "form-control shadow rounded", placeholder: "Balance" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :Date, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :date,  class: "form-control shadow rounded", placeholder: "Date of Eventr" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :Time_Slag, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.text_field :time,  class: "form-control shadow rounded", placeholder: "Time Slag" %>
          </div>
        </div>
        

        <div class="form-group row">
          <%= f.label :Upload_Image, class: "col-2 col-form-label text-light" %>
          <div class="col-5"> 
            <%= f.file_field :image,  class: "form-control shadow rounded", placeholder: "Image" %>
          </div>
        </div>
    
        
          <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
        
        
            <% end %>
    
    <div class="mb-3">
      <%= link_to '[ Cancel and return Back ]', root_path, class: "text-info" %>
    </div>
  </div>
</div>


  
</div>
  
